<Window x:Class="WPF30SEP.Views.Windows.StudentEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF30SEP.Views.Windows"
        xmlns:cmd="clr-namespace:WPF30SEP.Infrastructure.Commands"
        mc:Ignorable="d"
        Title="Student Editor Window" Height="250" Width="400" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}" ResizeMode="NoResize" ShowInTaskbar="False">
        <DockPanel>
        <TextBlock DockPanel.Dock="Top" Margin="10" FontSize="20" Text="Student Editor" HorizontalAlignment="Center" FontWeight="Bold"/>
        <UniformGrid DockPanel.Dock="Bottom" Rows="1" HorizontalAlignment="Right">
            <Button Content="Ok" Margin="10" IsDefault="True" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" >
                <Button.Command>
                    <cmd:CloseStudentEditorDialog DialogResult="True"/>
                </Button.Command>
            </Button>
            <Button Content="Cancel" Margin="10" IsCancel="True">
                <Button.Command>
                    <cmd:CloseStudentEditorDialog DialogResult="False"/>
                </Button.Command>
            </Button>
        </UniformGrid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="Grid.Column" Value="0">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Margin" Value="10"/>
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Trigger>
                        </Style.Triggers>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="10"/>
                </Style >
            </Grid.Resources>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Id"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="FirstName"/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="LastName"/>

                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Id}"/>
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding FirstName}"/>
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding LastName}"/>
            </Grid>
     </DockPanel>
</Window>
