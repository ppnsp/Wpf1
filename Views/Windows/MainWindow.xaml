<Window x:Class="WPF30SEP.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF30SEP.Views"
        xmlns:model="clr-namespace:WPF30SEP.Models"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="White"
        >
    <Window.DataContext>
        <StaticResource ResourceKey="decanatVM" />
    </Window.DataContext>

    <TabControl>
        <TabItem Header="Stud">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" MinWidth="200"/>
                    <ColumnDefinition Width="200" MinWidth="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0, 0,0, 10">
                    <UniformGrid DockPanel.Dock="Top" Rows="1">
                        <Button Content="Show Modal Window" Width="60"  Command="{Binding CreateStudentCommand}" CommandParameter="{Binding SelectedStudent}"></Button>
                        <Button Content="EditStudentCommand" Width="60" DockPanel.Dock="Right" Command="{Binding EditStudentCommand}" CommandParameter="{Binding SelectedStudent}"></Button>
                    </UniformGrid>
                </DockPanel>
                <GroupBox Header="Groups" Grid.Row="1" Grid.Column="0">
                    <ListBox ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}" SelectedIndex="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="model:Group" >
                                <DockPanel>
                                    <TextBlock Text="{Binding Students.Count}" DockPanel.Dock="Right"/>
                                    <TextBlock Text="{Binding Name}" DockPanel.Dock="Left"/>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                <GroupBox Header="Students" Grid.Column="1" Grid.Row="1">
                    <ListBox ItemsSource="{Binding SelectedGroup.Students}" SelectedItem="{Binding SelectedStudent}" SelectedIndex="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="model:Student">
                                <DockPanel>
                                    <TextBlock Text="{Binding FirstName}" DockPanel.Dock="Right"/>
                                    <TextBlock Text="{Binding Id}" DockPanel.Dock="Left"/>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                <GroupBox Header="Information" Grid.Row="1" Grid.Column="2" DataContext="{Binding SelectedStudent}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="Grid.Column" Value="0">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Margin" Value="0, 0, 10, 0"/>
                                    </Trigger>
                                    <Trigger Property="Grid.Column" Value="1">
                                        <Setter Property="Margin" Value="2, 0, 0, 0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Id"/>
                        <TextBlock Grid.Column="0" Grid.Row="1" Text="FirstName"/>
                        <TextBlock Grid.Column="0" Grid.Row="2" Text="LastName"/>

                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Id}"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding FirstName}"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding LastName}"/>
                    </Grid>
                </GroupBox>
                <GridSplitter Grid.Column="0" HorizontalAlignment="Right"  VerticalAlignment="Stretch" BorderThickness="5" Background="Red"/>
                <GridSplitter Grid.Column="1" HorizontalAlignment="Right"  VerticalAlignment="Stretch" BorderThickness="5" Background="Red"/>
            </Grid>
        </TabItem>
        <TabItem Header="Old">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="File">
                        <MenuItem Header="Exit" Command="{StaticResource CloseWindowBottons}"/>
                    </MenuItem>
                </Menu>
                <StatusBar DockPanel.Dock="Bottom">
                    <StatusBarItem DockPanel.Dock="Right">
                        <ResizeGrip  Background="Red" />
                    </StatusBarItem>
                    <StatusBarItem Content="Done"/>
                </StatusBar>
                <Grid Margin="3">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="Grid.Column" Value="0">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,0,5, 0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Grid.Column" Value="1">
                                    <Setter Property="Margin" Value="5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Password" />
                    <TextBox Grid.Column="1" Grid.Row="0" Text="123"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" Text="File" />
                    <DockPanel Grid.Column="1" Grid.Row="1" >
                        <Button Content="Select" DockPanel.Dock="Right"/>
                        <TextBox BorderThickness="0" IsReadOnly="True"/>
                    </DockPanel>

                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Check Converters" />
                    <DockPanel Grid.Column="1" Grid.Row="2" >
                        <Slider DockPanel.Dock="Top" ToolTip="{Binding Value, RelativeSource={RelativeSource Self}}" Margin="10" Maximum="100" Minimum="0" Value="50" x:Name="SliderValue"/>
                        <TextBox DockPanel.Dock="Bottom" Text="{Binding Value, ElementName=SliderValue, Converter={StaticResource LinerConverter}, UpdateSourceTrigger=PropertyChanged}" Margin="10" />
                    </DockPanel>

                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Decanat" />
                    <DockPanel Grid.Column="1" Grid.Row="3">
                        <ListView ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}" SelectedIndex="0" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView ItemsSource="{Binding SelectedGroup.Students}" SelectedItem="{Binding SelectedStrudent, UpdateSourceTrigger=PropertyChanged}" SelectedIndex="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID1" DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding FirstName}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
<!--
                        <TextBlock Text="{Binding SelectedStrudent.Id}"/>
                        <TextBlock Text="{Binding SelectedStrudent.FirstName}"/>
    -->
                    </DockPanel>
                </Grid>
            </DockPanel>

        </TabItem>
    </TabControl>
    
</Window>
